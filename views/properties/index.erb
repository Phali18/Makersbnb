<h1> Makersbnb Properties </h1>

<form action="/sessions/destroy" method="post">
      <button type="submit" value="Sign out">Sign Out</button>
</form>

<ul>
  <% @properties.each do |property| %>
    <li class="property" id="property-<%= property.id %>">
      <a href="/properties/<%= property.id %>"> <%= property.name %> </a>
      <%= property.description %> 
      <%= property.price %> 
    </li>

    <form action="/properties/<%= property.id %>/edit" method="get">
      <input type="submit" value="Edit" />
    </form>
  <% end %>
</ul>

<form action="/properties/new" method="get" >
  <input type="submit" value="Add">
</form>

